<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFrag">

    <fragment
        android:id="@+id/loginFrag"
        android:name="com.example.quizappnav.LoginFrag"
        android:label="fragment_login"
        tools:layout="@layout/frag_login" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFrag" />
    </fragment>
    <fragment
        android:id="@+id/homeFrag"
        android:name="com.example.quizappnav.HomeFrag"
        android:label="fragment_home"
        tools:layout="@layout/frag_home" >
        <argument
            android:name="username"
            app:argType="string"
            android:defaultValue="Username" />
    </fragment>
</navigation>